{
    "name": "dhtslib",
    "description": "D bindings for htslib",
    "authors": ["James S. Blachly, MD"],
    "homepage": "https://github.com/blachlylab/dhtslib",
    "license": "MIT",
    "lflags":["$LFLAGS"],
    "dependencies": {
    },
    "configurations": [
        {
            "name": "tabix_test",
            "targetType": "executable",
            "targetName": "tabix_gffreader",
            "sourcePaths": ["test"],
            "mainSourceFile": "test/tabix_gffreader.d",
            "libs": ["hts"],
            "excludedSourceFiles": [
                "test/bgzfreader.d", "test/samreader.d", "test/vcfwriter.d"
            ]
        },
        {
            "name": "bgzf_test",
            "targetType": "executable",
            "targetName": "bgzfreader",
            "sourcePaths": ["test"],
            "mainSourceFile": "test/bgzfreader.d",
            "libs": ["hts"],
            "excludedSourceFiles": [
                "test/tabix_gffreader.d", "test/samreader.d", "test/vcfwriter.d"
            ]
        },
        {
            "name": "sam_test",
            "targetType": "executable",
            "targetName": "samreader",
            "sourcePaths": ["test"],
            "mainSourceFile": "test/samreader.d",
            "libs": ["hts"],
            "excludedSourceFiles": [
                "test/tabix_gffreader.d", "test/bgzfreader.d", "test/vcfwriter.d"
            ]
        },
        {
            "name": "vcf_writer_test",
            "targetType": "executable",
            "targetName": "vcfwriter",
            "sourcePaths": ["test/vcf"],
            "mainSourceFile": "test/vcf/vcfwriter.d",
            "libs": ["hts"]
        },
        {
            "name": "source",
            "targetType": "sourceLibrary",
            "libs": ["hts"],
        },
        {
            "name": "source-static",
            "targetType": "sourceLibrary",
            "preBuildCommands-posix":["cd $PACKAGE_DIR;make deps"],
            "sourceFiles":["./htslib/libhts.a"],
        }
    ]
}
